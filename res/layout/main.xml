<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
        <ImageView android:layout_width="50dp" android:layout_height="50dp"
                   android:id="@+id/image"
                />
        <ProgressBar android:layout_width="50dp" android:layout_height="wrap_content"
                     style="@android:style/Widget.ProgressBar.Horizontal"
                     android:layout_gravity="center"
                     android:id="@+id/progress"
                />
    </FrameLayout>
    <TextView android:layout_width="match_parent" android:layout_height="60dp"
              android:text="@string/app_name"
            />
</LinearLayout>

